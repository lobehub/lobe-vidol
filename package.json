    "@pixiv/three-vrm-core": "2.1.1",
    "@react-spring/web": "^9.7.3",
    "@types/react-speech-recognition": "^3.9.5",
    "@vercel/analytics": "^1.3.1",
    "ahooks": "^3.8.0",
    "ai": "^2.2.37",
    "antd": "~5.16.5",
    "antd-style": "^3.6.2",
    "axios": "^1.7.2",
    "buffer": "^6.0.3",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.11",
    "fast-deep-equal": "^3.1.3",
    "immer": "^10.1.1",
    "js-tiktoken": "^1.0.12",
    "localforage": "^1.10.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.309.0",
    "mmd-parser": "^1.0.4",
    "next": "^14.2.3",
    "next-pwa": "^5.6.0",
    "openai": "^4.47.1",
    "polished": "^4.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.10.2",
    "react-layout-kit": "^1.9.0",
    "react-lazy-load": "^4.0.1",
    "react-virtuoso": "^4.7.11",
    "swr": "^2.2.5",
    "three": "^0.162.0",
    "ua-parser-js": "^1.0.37",
    "utility-types": "^3.11.0",
    "uuid": "^9.0.1",
    "ws": "^8.17.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
