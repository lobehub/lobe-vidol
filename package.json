    "@lobehub/lint": "^1.23.4",
    "@next/bundle-analyzer": "^14.2.3",
    "@peculiar/webcrypto": "^1.4.6",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.3.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "20.3.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.162.0",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.8",
    "commitlint": "^19.3.0",
